{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowKinesisStreamAccess",
      "Effect": "Allow",
      "Action": [
        "kinesis:GetRecords",
        "kinesis:GetShardIterator",
        "kinesis:DescribeStream",
        "kinesis:DescribeStreamSummary",
        "kinesis:ListShards",
        "kinesis:ListStreams",
        "kinesis:SubscribeToShard"
      ],
      "Resource": "arn:aws:kinesis:eu-west-1:YOUR_ACCOUNT_ID:stream/ecommerce-events-stream"
    }
  ]
}